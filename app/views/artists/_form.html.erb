<%= form_for(@artist, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @artist.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@artist.errors.count, 'error') %> prohibited
        this artist from being saved:</h2>
    <ul>
    <% @artist.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
      <p class="help-block">Supporting help text</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bio, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :bio, :size => '10x5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_date %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_date %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Create", :class => 'btn btn-primary' %>
    <%= link_to "Cancel", artists_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
