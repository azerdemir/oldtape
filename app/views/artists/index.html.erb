<h2>Artists</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Start</th>
      <th>End</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.bio %></td>
      <td><%= artist.start_date %></td>
      <td><%= artist.end_date %></td>
      <td><%= link_to 'Display', artist, :class => 'btn btn-mini' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New artist', new_artist_path %>
