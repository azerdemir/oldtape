<h2><%= @album.name %></h2>

<p>
  <%= @album.info %>
</p>

<p>
  <strong>Release Date:</strong>
  <%= @album.release_date %>
</p>

<h4>Albums</h4>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Track</th>
    <th>Name</th>
    <th>Duration</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @album.songs.each do |song| %>
      <tr>
        <td><%= song.track %></td>
        <td><%= song.name %></td>
        <td><%= song.duration %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New song', new_song_path(:album_id => @album.id) %>
